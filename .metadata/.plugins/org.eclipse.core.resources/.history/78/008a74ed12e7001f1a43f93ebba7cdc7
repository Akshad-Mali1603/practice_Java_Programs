package services;

import java.util.ArrayList;
import java.util.Scanner;

import sub_class.Customer;

public class customerService {
	
	private ArrayList<Customer> cust= new ArrayList<Customer>();
	
	
	public void create(){
		Customer newCustomer= new Customer();
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter a your name: ");
		String name=sc.next();
		System.out.println("Enter address: ");
		String addr=sc.next();
		System.out.println("Enter username/email: ");
		String email=sc.next();
		System.out.println("Set your password: ");
		String pass=sc.next();
		
		newCustomer= new Customer(name, addr, email, pass);
		cust.add(newCustomer);
		
		System.out.println("\u001B[1;32mCustomer added successfully !!\u001B[0m"+newCustomer.getId());
		
	}
	
	
	public void display() {
		if (cust.isEmpty()) {
			System.out.println("\u001B[1;31mNo customer Found !!\u001B[0m");
		}else {
			System.out.println("\n\u001B[1;34mCustomers List Below-->\u001B[0m");
			for (Customer customer : cust) {
				customer.displayCustomer();
				System.out.println("\u001B[1;34m--------------------------------\u001B[0m");
			}
		}
	}

	
}
